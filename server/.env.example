# Meeting Recorder Server Configuration

# Server settings
HOST=0.0.0.0
PORT=8000

# Whisper settings
WHISPER_MODEL=base  # Options: tiny, base, small, medium, large
WHISPER_DEVICE=auto  # Options: cpu, cuda, auto
WHISPER_COMPUTE_TYPE=default  # Options: default, int8, float16

# Ollama settings
OLLAMA_ENDPOINT=http://localhost:11434

# For NVIDIA GPU (RTX 2000 ADA):
# WHISPER_DEVICE=cuda
# WHISPER_COMPUTE_TYPE=float16
# Install: pip install torch torchvision torchaudio

# For CPU-only server:
# WHISPER_DEVICE=cpu
# WHISPER_COMPUTE_TYPE=int8
